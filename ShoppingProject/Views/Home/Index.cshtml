@{
    ViewData["Title"] = "Home Page";
}

@model PaginationListViewModel

    <h1>Shopping Project</h1>

    @foreach (Item p in Model.Items)
    {
        <h3>@p.ItemName</h3>

        <ul>
            <li>@p.ItemDescription</li>
            <li>@p.Price</li>
            <li>@p.Amount</li>
        </ul>
    }

<div page-model="@Model.PaginationInfo" page-action="Index"></div>
